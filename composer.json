{
  "name": "rarus/bonus-server-php-sdk",
  "description": "Bonus server PHP SDK",
  "keywords": [
    "Rarus",
    "PHP",
    "REST",
    "API"
  ],
  "type": "library",
  "homepage": "https://rarus.ru/bonus/",
  "license": "MIT",
  "authors": [
    {
      "name": "Ivlev Andrey",
      "email": "aaivlev@gmail.com"
    }
  ],
  "require": {
    "php": "~8.2.0 || ~8.3.0 || ~8.4.0",
    "ext-curl": "*",
    "ext-json": "*",
    "psr/log": "^3.0.2",
    "fig/http-message-util": "1.*",
    "monolog/monolog": "3.9.0",
    "guzzlehttp/guzzle": "^7.9.3",
    "moneyphp/money": "^v4.7.1",
    "psr/simple-cache": "^3.0",
    "php-http/discovery": "^1.20"
  },
  "require-dev": {
    "ext-intl": "*",
    "laravel/pint": "^1.24.0",
    "phpstan/phpstan": "2.*",
    "phpunit/phpunit": "*",
    "rector/rector": "^2.1",
    "symfony/cache": "^7.3",
    "symfony/dotenv": "7.*"
  },
  "autoload": {
    "psr-4": {
      "Rarus\\LMS\\SDK\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rarus\\LMS\\SDK\\Tests\\": "tests"
    }
  },
  "scripts": {
    "lint": "pint -v --parallel",
    "test:lint": "pint --test -v --parallel",
    "test:types": "phpstan analyse --ansi --memory-limit=1G",
    "test:integration": "phpunit --testsuite Integration --colors=always",
    "test:unit": "phpunit --testsuite Unit --colors=always",
    "rector": "rector"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "php-http/discovery": true
    }
  }
}
